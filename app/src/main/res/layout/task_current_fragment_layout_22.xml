<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_refresh_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="15dp">

                <TextView
                    android:id="@+id/task_status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="任务状态"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/task_status_faq"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:layout_toEndOf="@id/task_status_label"
                    android:background="#00000000"
                    android:scaleType="centerInside"
                    android:src="@mipmap/wenhao" />

                <TextView
                    android:id="@+id/task_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/task_status_label"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="任务状态"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/task_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@+id/task_status_label"
                    android:text="任务名称"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/task_type_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务类型"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/task_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/task_type_label"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="任务类型"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/task_club_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/task_type"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@+id/task_type"
                        android:text="苹果部"
                        android:textSize="17sp"
                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">

                    <TextView
                        android:id="@+id/task_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务信息"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/task_publisher_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/task_message"
                        android:layout_alignStart="@id/task_message"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="作者：" />

                    <TextView
                        android:id="@+id/task_publisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/task_publisher_label"
                        android:layout_toEndOf="@+id/task_publisher_label"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/task_time_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/task_publisher_label"
                        android:layout_alignStart="@id/task_message"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="时间:"
                        android:textSize="15sp" />
                    <!--TextClock TextView-->
                    <TextClock
                        android:id="@+id/task_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/task_time_label"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/task_time_label"
                        android:background="#63FFFFFF"
                        android:format12Hour="yyyy-MM-dd,HH:mm"
                        android:format24Hour="hh:mm,EE"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/task_location_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/task_time_label"
                        android:layout_alignStart="@id/task_time_label"
                        android:layout_marginTop="10dp"
                        android:text="地点:"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/task_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/task_location_label"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/task_location_label"
                        android:text="任务地点"
                        android:textColor="#000" />

                    <ImageView
                        android:id="@+id/task_map_location"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignBottom="@+id/task_location"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/task_location"
                        android:src="@drawable/map" />

                    <TextView
                        android:id="@+id/task_desc_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/task_location"
                        android:layout_alignStart="@id/task_location_label"
                        android:layout_marginTop="10dp"
                        android:text="任务要求:"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/task_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/task_desc_label"
                        android:layout_alignStart="@+id/task_desc_label"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/myrect"
                        android:enabled="false"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:minLines="4"
                        android:padding="10dp"
                        android:scrollbars="vertical"
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/task_participant_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与成员"
                    android:textSize="20sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/task_participant_list"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_below="@+id/task_participant_label"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp">

                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
