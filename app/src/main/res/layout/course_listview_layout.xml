<?xml version="1.0" encoding="utf-8"?>
<com.example.learningsupport_argame.Course.list.MyItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">


            <TextView
                android:id="@+id/course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                tools:text="课程名称" />

            <ImageView
                android:id="@+id/course_monitor_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/course_name"
                android:src="@drawable/course_monitor_icon"
                tools:ignore="ContentDescription" />


            <TextView
                android:id="@+id/course_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                tools:text="课程时间" />

            <TextView
                android:id="@+id/course_classroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_time"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                tools:text="教室" />

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/delete"
            style="@style/menu_text_style"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:text="删除" />
    </LinearLayout>

</com.example.learningsupport_argame.Course.list.MyItemLayout>
