<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical">

    <TextSwitcher
        android:id="@+id/textSwitcherLeft"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:inAnimation="@anim/monitor_poetry_left_in"
        android:outAnimation="@anim/monitor_poetry_left_out" />


    <TextSwitcher
        android:id="@+id/textSwitcherRight"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:inAnimation="@anim/monitor_poetry_right_in"
        android:outAnimation="@anim/monitor_poetry_right_out" />

</FrameLayout>
