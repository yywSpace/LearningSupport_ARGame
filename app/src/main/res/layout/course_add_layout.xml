<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addcourse_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/return_coursetable"
                android:src="@drawable/course_ic_return"
                android:onClick="return_coursetable_onClick"
                android:layout_marginRight="15dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/add_commit"
                android:text="提交"
                android:textColor="@android:color/black"
                android:background="@drawable/course_shapebtn1"
                android:onClick="add_commit_onClick"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:includeFontPadding="false"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:layout_margin="15dp"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:text="课程:"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="17dp"
            android:textSize="18sp"
            android:paddingRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/add_course"
            android:textSize="18sp"
            android:maxLength="15"
            android:layout_marginTop="5dp"
            android:layout_marginRight="17dp"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="未填写"

            />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="教室:"
                android:textColor="@android:color/black"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="17dp"
                android:textSize="18sp"
                android:paddingRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/add_classroom"
                android:hint="未填写"
                android:maxLength="15"
                android:layout_marginTop="22dp"
                android:layout_marginRight="17dp"
                android:textSize="18sp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qitatime_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:background="@color/colorCourse2"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_height="0.5dip"
                android:layout_width="match_parent"/>
            />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:text="节数:"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="17dp"
                android:textSize="18sp"
                android:paddingRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
           <TextView
                android:id="@+id/add_jieshu"
               android:hint="未填写"
               android:maxLength="15"
               android:focusable="false"
               android:background="@null"
               android:gravity="center_vertical|center_horizontal|left"
               android:textColor="@android:color/black"
               android:layout_marginTop="5dp"
               android:layout_marginRight="17dp"
               android:layout_marginBottom="7dp"
               android:textSize="18sp"
                android:onClick="add_jieshu_onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/add_qitaduan"
            android:text="继续添加其他时段"
            android:layout_width="match_parent"
            android:layout_marginLeft="200dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:onClick="add_qitatime_onClick"
            />
        <View
            android:background="@color/colorCourse2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="0.5dip"
            android:layout_width="match_parent"/>
        />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="老师:"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="17dp"
                android:textSize="18sp"
                android:paddingRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:id="@+id/add_teacher"
                android:hint="未填写"
                android:maxLength="15"
                android:layout_marginTop="15dp"
                android:layout_marginRight="17dp"
                android:textSize="18sp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="周数:"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="17dp"
                android:textSize="18sp"
                android:paddingRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/add_zhoushu"
                android:hint="未填写"
                android:focusable="false"
                android:clickable="true"
                android:onClick="add_zhoushu_onClick"
                android:gravity="center_vertical|center_horizontal|left"
                android:layout_marginTop="15dp"
                android:layout_marginRight="17dp"
                android:textSize="18sp"
                android:maxLength="15"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <Button
             android:id="@+id/course_clear_all"
             android:layout_marginTop="30dp"
             android:text="清空所有课程信息"
             android:onClick="clear_all_onClick"
             android:background="@drawable/course_shapebtn1"
             android:includeFontPadding="false"
             android:layout_marginBottom="15dp"
             android:layout_weight="1"
             android:layout_centerHorizontal="true"
             android:layout_marginLeft="17dp"
             android:textSize="16sp"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />

         <View
             android:background="@android:color/transparent"
             android:layout_height="match_parent"
             android:layout_width="30dp"/>
         />


     <Button
         android:id="@+id/add_next"
         android:layout_marginTop="30dp"
         android:text="继续添加下一课程"
         android:layout_marginRight="17dp"
         android:onClick="add_next_onClick"
         android:background="@drawable/course_shapebtn1"
         android:includeFontPadding="false"
         android:layout_marginBottom="15dp"
         android:layout_weight="1"
         android:layout_centerHorizontal="true"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:textSize="16sp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />

         </LinearLayout>
     </LinearLayout>
  </ScrollView>
</LinearLayout>
