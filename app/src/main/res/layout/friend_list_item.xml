<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:id="@+id/friend_list_item_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_avatar_03" />


        <TextView
            android:id="@+id/friend_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/friend_list_item_avatar"
            android:gravity="center"
            android:text="ta的昵称"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/friend_list_item_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/friend_list_item_name"
            android:text="Lv.1"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/friend_list_item_stranger"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/friend_list_item_level"
            android:src="@drawable/friend_stranger_icon"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/friend_list_item_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_list_item_level"
            android:layout_toEndOf="@+id/friend_list_item_avatar"
            android:gravity="center"
            android:text="IT/互联网"
            android:textColor="#cbcbcb" />


        <ImageView
            android:id="@+id/friend_item_friend_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/friend_info_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_list_item_major"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/friend_list_item_avatar"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/friend_list_item_avatar_red_point"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/friend_list_item_red_point" />

            <TextView
                android:id="@+id/friend_item_last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="13"
                android:ellipsize="end"
                android:text="不在线"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
