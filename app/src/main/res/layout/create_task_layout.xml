<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务名："
            android:textSize="20sp"


            android:id="@+id/b1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入任务名"
            android:layout_toRightOf="@id/b1"
            android:layout_alignBaseline="@id/b1"
            android:id="@+id/input_name"

           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务时间:"
            android:layout_below="@id/b1"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:id="@+id/b2"/>
        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/b2"
            android:layout_marginTop="10dp"
            android:id="@+id/input_tasktime"
            ></DatePicker>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务地点:"
            android:textSize="20sp"
            android:id="@+id/b3"
            android:layout_below="@id/input_tasktime"
            android:layout_marginTop="25dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/b3"
            android:layout_alignBaseline="@id/b3"
            android:text="请输入任务地点"
            android:id="@+id/input_taskdidian"/>
        <ImageButton
            android:id="@+id/btn_ditu_create"


            android:layout_toRightOf="@id/input_taskdidian"
            android:layout_alignBottom="@id/input_taskdidian"
            android:scaleType="fitXY"
            android:clickable="true"
            android:src="@drawable/map"
            android:focusable="true"
            android:layout_marginLeft="20dp"
            android:layout_width="64dp"
            android:layout_height="56dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务信息:"
            android:textSize="20sp"
            android:layout_below="@id/b3"
            android:layout_marginTop="25dp"
            android:id="@+id/b4"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_task_info"
            android:layout_below="@id/b4"
            android:layout_marginRight="25dp"
            android:text="请输入任务信息"
            android:layout_toRightOf="@id/b4"
            android:inputType="textMultiLine"
            android:lines="10"
            android:gravity="top"/>


    </RelativeLayout>


</LinearLayout>