<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/myrect"
        android:elevation="10dp"
        android:paddingLeft="14dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/task_redo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_font"
            android:text="任务名称"
            android:layout_marginLeft="5dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/task_item_image1"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_below="@id/task_redo_name"
            android:src="@drawable/shijian"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@id/task_redo_time"/>
        <TextView
            android:id="@+id/task_redo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_redo_name"
            android:layout_toRightOf="@id/task_item_image1"
            android:layout_marginLeft="10dp"
            android:text="时间"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/task_item_image2"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_below="@id/task_redo_time"
            android:layout_marginLeft="5dp"
            android:src="@drawable/gongzuodidian"
            android:layout_alignBottom="@id/task_redo_location"/>
        <TextView
            android:id="@+id/task_redo_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@id/task_redo_time"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/task_item_image2"
            android:text="地点"
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>