<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seller_dynamic_time"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="17年12月"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seller_dynamic_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加好友"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">

            <ImageView
                android:id="@+id/user_management_friend_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user_management_avatar" />

            <TextView
                android:id="@+id/user_management_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/user_management_friend_avatar"
                android:text="UserName">

            </TextView>

            <TextView
                android:id="@+id/user_management_friend_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_management_friend_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/user_management_friend_avatar"
                android:text="Lv.1">

            </TextView>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>