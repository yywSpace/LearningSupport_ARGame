    <application
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true" >
        <uses-library android:name="android.test.runner" />

        <activity android:name="com.example.ARModel.SendMessageActivity" />
        <activity android:name="com.example.ARModel.ModelPutActivity" />
        <activity android:name="com.example.ARModel.ModelScanActivity" />
        <activity
            android:name="com.example.ARModel.UnityPlayerActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale|layoutDirection|density"
